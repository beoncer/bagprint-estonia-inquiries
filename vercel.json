{
  "buildCommand": "node build.js",
  "outputDirectory": "dist/client",
  "functions": {
    "src/api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://ixotpxliaerkzjznyipi.supabase.co/functions/v1/sitemap"
    }
  ],
  "routes": [
    {
      "src": "/tooted$",
      "dest": "/tooted/index.html"
    },
    {
      "src": "/tooted/([^/]+)$",
      "dest": "/tooted/$1/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/admin/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/tooted/**",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ]
}